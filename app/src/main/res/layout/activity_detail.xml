<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundGray"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/colorMain"
        >


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="场馆详情"
            android:layout_gravity="center"
            android:textColor="@android:color/white"
            android:textSize="30dp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/tab_re_btn"
            android:id="@+id/IV_dt_re"
            android:paddingRight="30dp"
            android:layout_marginStart="20dp"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true" />


    </RelativeLayout>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:background="@drawable/bg_tiyu"
        android:id="@+id/FL_dt_pic"
        android:scaleType="fitXY"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="总场馆数：10"
                android:textSize="20dp"
                android:id="@+id/TV_dt_totalnum"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:textColor="@android:color/holo_red_light"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/TV_dt_title"
                android:text="东区篮球馆"
                android:textSize="30dp"
                android:textColor="@android:color/white"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true" />

        </RelativeLayout>
    </FrameLayout>

    <TextView

        android:layout_width="match_parent"
        android:layout_height="155dp"
        android:text="地点：4食堂对面东区体育场"
        android:id="@+id/TV_dt_loc"
        android:textSize="20dp"
        android:gravity="center"
        android:textColor="#666666"
        />

    <TextView
        android:id="@+id/TV_dt_notice"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:text="公告：今天下雨，明天放假！哈哈哈哈哈哈哈哈哈哇哇哇哇！蛇精病！"
        android:textColor="@android:color/holo_red_light"
        android:textSize="28dp"
        android:gravity="center"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/TV_dt_avanum"
            android:layout_weight="2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="可预约数：0"
            android:background="#666666"
            android:textSize="20dp"
            android:textColor="@color/colorMain"
            android:gravity="center"
            />

        <TextView
            android:id="@+id/TV_dt_yuyuebt"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@color/colorMain"
            android:text="立即预约"
            android:textSize="25dp"
            android:textColor="@android:color/white"
            android:gravity="center"
            />

    </LinearLayout>

</LinearLayout>